<div class="row">
    {% set userId = app.session.get('user') %}
    <div class="my-following-data col-xs-3 text-center">
        <a href="{{ path('show_following_users', {'id': userId}) }}">
            <h3 class="label-stat">
                Following
            </h3>
            <span class="number-stat">
             {{ user|userStats('following') }}
            </span>
        </a>
    </div>
    <div class="my-following-data col-xs-3 text-center">
        <a href="{{ path('show_follower_users', {'id': userId}) }}">
            <h3 class="label-stat">
                Followers
            </h3>
            <span class="number-stat">
            {{ user|userStats('follower') }}
            </span>
        </a>
    </div>
    <div class="my-following-data col-xs-3 text-center">
        <a href="{{ path('show_user_publications', {'id': userId}) }}">
            <h3 class="label-stat">
                Publications
            </h3>
            <span class="number-stat">
            {{ user|getOwnPublications() }}
            </span>
        </a>
    </div>
    <div class="my-following-data col-xs-3 text-center">
        <a href="{{ path('show_user_likes', {'id': userId}) }}">
            <h3 class="label-stat">
                Likes
            </h3>
            <span class="number-stat">
                {{ user|userStats('likes') }}
            </span>
        </a>
    </div>
</div>
