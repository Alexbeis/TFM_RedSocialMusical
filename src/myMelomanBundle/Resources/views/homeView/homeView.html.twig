{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/home.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block content %}
<div class="container">
    <div class="row">
        <div id="timeline" class="col-xs-12 col-lg-7  box-default">
            <h1 class="box-header">Timeline</h1>
            <div class="box-content">
                PUBLICATIONS
            </div>
        </div>
        <div class="col-xs-12 col-lg-4">
            <div id="user-card" class="col-xs-12  box-default">
                <div class="avatar">
                    {% set picture = app.session.get('picture') %}
                    <img src="{{ picture }}"/>
                </div>
                <div class="name">
                    <a href="#">{{ app.session.get('name') }}</a>
                    <div class="clearfix">

                    </div>
                    <span class="role">
                        User
                    </span>

                </div>
            </div>
            <div id="new-publication" class="col-xs-12 box-default ">
                <h1 class="box-header">
                    Create Publication
                </h1>
                <form method="POST" action="">
                    <label for="message">Message</label>
                    <textarea name="message" id="message" class="form-control" rows="3"></textarea>
                    <input type="submit" class="btn btn-primary" value="Share">
                </form>

            </div>
            <div id="new-publication" class="col-xs-12 box-default ">
                <h1 class="box-header">
                    Spotify
                </h1>
                <form method="POST" action="">
                    <label for="artist">Artist</label>
                    <input name="artist" id="artist" type="text" class="form-control" placeholder="Artist">
                    <label for="song">Song</label>
                    <input name="song" id="song" type="text" class="form-control" placeholder="Song">
                    <input type="submit" class="btn btn-primary" value="Find">
                </form>
                <iframe src="https://open.spotify.com/embed?uri=spotify%3Aalbum%3A2rp5riHULWgrXPsDtsp1ir" width="300" height="500" frameborder="10" allowtransparency="true"></iframe>

            </div>
        </div>

    </div>
</div>
{% endblock %}