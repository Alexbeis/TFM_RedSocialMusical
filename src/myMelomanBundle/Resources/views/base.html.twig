<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/bootstrap/css/bootstrap.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('assets/bootstrap/css/bootstrap-social.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('assets/font-awesome/css/font-awesome.css') }}" type="text/css" rel="stylesheet"/>
            <link href="https://fonts.googleapis.com/css?family=Bevan|Cabin|Lobster" rel="stylesheet">
            <link href="{{ asset('assets/css/styles.css') }}" type="text/css" rel="stylesheet"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div>
            {#<h1>MELOMANIACS</h1>#}
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('home') }}">
                            <span alt="Brand" class=" glyphicon glyphicon-volume-up"> </span>
                        </a>
                    </div>
                    {% set user = app.session.get('user') %}
                    {% set picture = app.session.get('picture') %}
                    {% if user is not null %}
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav ">
                            <li>
                                <form action=" {{ path('user_search') }}" class="navbar-form navbar-left row">
                                    <div class="form-group col-xs-10">
                                        <input type="text" class="form-control" placeholder="Search People" name="search"/>
                                    </div>
                                    <button type="submit" class="btn btn-default col-xs-2">
                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                    </button>
                                </form>
                            </li>
                            <li>
                                <a href="{{ path('user_list') }}"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                    &nbsp;People
                                </a>
                            </li>

                        </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <div class="avatar">
                                            <img src="{{ picture }}"/>
                                        </div>

                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#">Signed in as: <b>{{ app.session.get('name') }}</b></a href="#">
                                        </li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="{{ path('user_profile') }}"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                                &nbsp; My User Profile
                                            </a>
                                        </li>
                                        <li><a href="{{ path('home') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                                                &nbsp; Home
                                            </a>
                                        </li>
                                        <li><a href="#"><span class="glyphicon glyphicon-cd" aria-hidden="true"></span>
                                                &nbsp; About Us
                                            </a>
                                        </li>
                                        <li role="separator" class="divider"></li>
                                        <li class="logout">
                                            <a href="{{ path('logout') }}"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                                                &nbsp; Logout
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        {% endif %}

                    </div>
                </div>
            </nav>
        </div>
        <section id="content" {#class="container"#}>
            {% block content %}{% endblock %}
        </section>
        {#<footer class="col-lg-12">#}
            {#<hr/>#}
            {#<div class="container">#}
                {#<div class="text-muted col-xs-4">Melomaniacs - Alex Albàs</div>#}
                {#<div class="text-muted col-xs-4">Web Development</div>#}
            {#</div>#}
        {#</footer>#}
        <footer class="row text-center">
            <div class="col-xs-4">
                <p>Connect with us on:</p>
                <ul class="social">
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                </ul>
            </div>
            <div class="col-xs-4">
                <p>Melomaniacs - Alex Albàs</p>
                <p >Web Development</p>
            </div>
            <div class="col-xs-4">
                <p><small>Copyright &copy; 2017. All rights reserved. <br>
                        Created by <a href="http://beisWeb.com">BeisWebDevelopment</a></small></p>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('assets/js/general.js') }}"></script>
            <script src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js'></script>
        {% endblock %}
    </body>
</html>
