{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/userProfile.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}
{% block content %}
    <div class="col-xs-8 col-xs-offset-2 form-style">
        <form action="{{ path('create_userProfile') }}" method="post" class="row box-form">
                <div class="text-center">

                    <img class="image" src="{{ app.session.get('picture') }}" alt="">
                    <h2 class="text-center"><span>Hey, {{ app.session.get('name') }} fill your profile :)</span></h2>
                </div>
                <input name="user" type="hidden" value="{{ app.session.get('user') }}">
                <input name="picture" type="hidden" value="{{ app.session.get('picture') }}">
                <div class="form-group row">
                    <label for="aboutme">AboutME</label>
                    <textarea name="aboutme" class="form-control col-10" id="aboutme" value= {{ userProfile.aboutMe ? userProfile.aboutMe : "" }} rows="6"></textarea>
                </div>
                <div class="form-group row">
                    <label for="example-date-input" class="col-2 col-form-label">BirthDate</label>
                    <div class="col-10">
                        <input name="birth" class="form-control" type="date" value="{{userProfile.birthDate != null ? userProfile.birthDate : userProfile.birthDate|date('Y-m-d H:i:s') }}" id="example-date-input">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tastes" class="col-2 col-form-label">Musical Tastes</label>
                    <ul>
                        <li><input name="rock" type="checkbox" id="cb1" />
                            <label class="check-label" for="cb1"><img src="http://lorempixel.com/100/100" /></label>
                        </li>
                        <li><input name="reggae" type="checkbox" id="cb2" />
                            <label class="check-label" for="cb2"><img src="http://lorempixel.com/101/101" /></label>
                        </li>
                        <li><input name="techno" type="checkbox" id="cb3" />
                            <label class="check-label" for="cb3"><img src="http://lorempixel.com/102/102" /></label>
                        </li>
                        <li><input name="funk" type="checkbox" id="cb4" />
                            <label class="check-label" for="cb4"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="blues" type="checkbox" id="cb5" />
                            <label class="check-label" for="cb5"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="mestizaje" type="checkbox" id="cb6" />
                            <label class="check-label" for="cb6"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="edm" type="checkbox" id="cb7" />
                            <label class="check-label" for="cb7"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="drum&bass" type="checkbox" id="cb8" />
                            <label class="check-label" for="cb8"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="hardrock" type="checkbox" id="cb9" />
                            <label class="check-label" for="cb9"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                        <li><input name="metal" type="checkbox" id="cb10" />
                            <label class="check-label" for="cb10"><img src="http://lorempixel.com/103/103" /></label>
                        </li>
                    </ul>
                </div>
                <div class="form-group row">
                    <label for="artist" class="col-2 col-form-label">Favourite Artists</label>
                    <div class="col-10">
                        <input name="artist" class="form-control" type="text" value="" id="artist">
                    </div>
                </div>
                <div class="button-section row">
                    <button type="submit" class="btn btn-primary col-xs-3">Submit</button>
                    <div class="col-xs-4 col-xs-offset-5">
                        <span class="privacy-policy ">
                        <input type="checkbox" class="form-check-input " name="policy" required>&nbsp;You agree to our Terms and Policy.
                    </span>
                    </div>
                </div>
        </form>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('assets/js/userProfile.js') }}"></script>#}
{% endblock %}